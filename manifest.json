{
  "manifest_version": 3,
  "name": "Linkedin Data Extractor",
  "description": "A demo chrome extension which likes and comments on linkedin posts. A submission for Banao-Chrome Extension Internship.",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "content_scripts": [
    {
        "matches": ["https://www.linkedin.com/feed/*"],
        "js": ["content.js"]
    }
],
  "background": {
    "service_worker": "background.js"
  }
}
